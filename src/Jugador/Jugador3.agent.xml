<agent
	xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Jugador3"
	package="Jugador">

	<imports>
		<import>src.Jugador.*</import>
		<import>src.Tablero.*</import>
		<import>src.ontologia.*</import>
		<import>Jugador.beliefs.*</import>
		<import>Jugador.plans.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
	</imports>
<!--para registrarse en el DF -->
	<capabilities>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>
	<beliefs>
		<!-- The player's knowledge about itself, encapsulated as player object. -->
		<belief name="myself" class="Jugador" exported="true">
			<fact>new Jugador("Victor", "Puertos")</fact>
		</belief>

		<belief name="tablero" class="Tablero" exported="true"/>


		<belief name="puntuacion" class="int" />


	</beliefs>

<!--para registrarse en el DF -->
	<goals>
		<maintaingoalref name="df_keep_registered">
			<concrete ref="dfcap.df_keep_registered"/>
		</maintaingoalref>
	</goals>

	<plans>
		<plan name="Tirar_dados">
				<body class="TirarDadosPlan"/>
				<trigger><messageevent ref="offer_tirar_dados"/></trigger>
		</plan>
		<plan name="Unirse_partida">
			<body class="Unirse_partida_Plan" />
			<trigger>
				<messageevent ref="request_unirse_partida" />
			</trigger>
		</plan>
	</plans>

	<events>
		<messageevent name="request_unirse_partida" type="fipa" direction="receive">
	<parameter name="performative" class="String" direction="fixed">
	<value>SFipa.REQUEST</value>
	</parameter>
	<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
			</parameter>
	<parameter name="content-class" class="Class" direction="fixed">
					<value>Request_unirse_partida.class</value>
				</parameter>
	</messageevent>

	<messageevent name="unirse_partida" type="fipa" direction="send">
	<parameter name="performative" class="String">
	<value>SFipa.INFORM</value>
	</parameter>
	<parameter name="language" class="String" direction="fixed">
					<value>SFipa.NUGGETS_XML</value>
				</parameter>
	</messageevent>

		<messageevent name="offer_tirar_dados" type="fipa" direction="receive">
<parameter name="performative" class="String" direction="fixed">
<value>SFipa.REQUEST</value>
</parameter>
<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
</messageevent>


<messageevent name="receive_tirar" type="fipa" direction="send">
<parameter name="performative" class="String">
<value>SFipa.INFORM</value>
</parameter>
<parameter name="language" class="String" direction="fixed">
				<value>SFipa.NUGGETS_XML</value>
 			</parameter>
</messageevent>

</events>

	<configurations>
		<configuration name="registro_inicial">
			<goals><initialgoal ref="df_keep_registered">
				<parameter ref="description"> <value>
					SFipa.createAgentDescription(null,SFipa.createServiceDescription("jugador","jugador", null))</value></parameter>
			</initialgoal></goals>
		</configuration>

	</configurations>

</agent>
