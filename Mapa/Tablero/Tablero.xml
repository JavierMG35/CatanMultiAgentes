<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Tablero"
	package="Mapa.Tablero">

	<imports>
		<import>tablero.beliefs.*</import>
		<import>referee.plans.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<import>jadex.util.*</import>
		<import>jadex.adapter.fipa.*</import>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
	</imports>

	<capabilities>
		<capability name="dfcap" file="jadex.planlib.DF"/>
	</capabilities>

	<beliefs>
		<belief name="jugador" class="Jugador"/>

	</beliefs>

	<goals>
		<achievegoalref name="df_search">
			<concrete ref="dfcap.df_search"/>
		</achievegoalref>
		<performgoal name="completar_jugadores" recur="true" recurdelay="2000">
			<contextcondition>$beliefbase.jugador &lt; 3</contextcondition>
		</performgoal>
		<achievegoal name="comienza_partida">
			<creationcondition>
			$beliefbase.casa &gt; 3
			</creationcondition>
		</achievegoal>
	</goals>

	<plans>
		<plan name="completar_casa_plan">
			<body class="CompletarCasaPlan" />
			<trigger> <goal ref="completar_jugadores"/> </trigger>
		</plan>
		<plan name="comienza_partida_plan">
			<body class="ComienzaPartidoPlan" />
			<trigger><goal ref="comienza_partido"/></trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
		<beliefs>
			<initialbelief ref="casa">
				<fact>0</fact>
			</initialbelief>
			<initialbelief ref="visitante">
				<fact>0</fact>
			</initialbelief>
		</beliefs>
		<goals>
			<initialgoal ref="completar_casa"></initialgoal>
			<initialgoal ref="completar_visitante"></initialgoal>
		</goals>

		</configuration>
	</configurations>

</agent>
